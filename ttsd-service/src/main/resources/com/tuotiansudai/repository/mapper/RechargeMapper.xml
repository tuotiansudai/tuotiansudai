<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.repository.mapper.RechargeMapper">

    <resultMap id="rechargeResultMap" type="RechargeModel">
        <id column="id" property="id"></id>
        <result column="login_name" property="loginName"></result>
        <result column="amount" property="amount"></result>
        <result column="fee" property="fee"></result>
        <result column="bank" property="bank"></result>
        <result column="status" property="status"></result>
        <result column="created_time" property="createdTime"></result>
    </resultMap>

    <insert id="create" parameterType="RechargeModel">
        insert into recharge (id, login_name, amount, fee, bank, status, created_time)
        value(#{id}, #{loginName}, #{amount}, #{fee}, #{bank}, #{status}, #{createdTime})
    </insert>

    <select id="findById" parameterType="long" resultMap="rechargeResultMap">
        select * from recharge where id = #{id}
    </select>

    <update id="updateStatus" parameterType="map">
        update recharge set status = #{status} where id = #{id}
    </update>

    <select id="findSumRechargeByLoginName" parameterType="java.lang.String" resultType="long">
        select IFNULL(sum(amount),0) as amount from recharge where status = 'SUCCESS' and login_name = #{loginName}
    </select>

</mapper>