<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuotiansudai.repository.mapper.BankSystemBillMapper">

    <resultMap id="bankSystemBillResultMap" type="BankSystemBillModel">
        <id column="id" property="id"></id>
        <result column="bank_order_no" property="bankOrderNo"></result>
        <result column="amount" property="amount"></result>
        <result column="operation_type" property="operationType"></result>
        <result column="business_type" property="businessType"></result>
        <result column="detail" property="detail"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="bank_order_date" property="bankOrderDate"></result>
    </resultMap>

    <select id="findSystemBillPagination" parameterType="map" resultMap="bankSystemBillResultMap">
        select * from bank_system_bill
        <where>
            <if test="startTime !=null" >
                and created_time >= #{startTime}
            </if>
            <if test="endTime !=null ">
                and created_time &lt;= #{endTime}
            </if>
            <if test="operationType !=null">
                and operation_type = #{operationType}
            </if>
            <if test="businessType !=null">
                and business_type = #{businessType}
            </if>
        </where>
        order by created_time desc, id desc
        limit #{index}, #{pageSize}
    </select>

    <select id="findSystemBillCount" parameterType="map" resultType="int">
        select count(1) from bank_system_bill
        <where>
            <if test="startTime !=null" >
                and created_time >= #{startTime}
            </if>
            <if test="endTime !=null ">
                and created_time &lt;= #{endTime}
            </if>
            <if test="operationType !=null">
                and operation_type = #{operationType}
            </if>
            <if test="businessType !=null">
                and business_type  = #{businessType}
            </if>
        </where>
    </select>

    <select id="findSumSystemBillAmount" parameterType="map" resultType="long">
        select IFNULL(SUM(amount), 0) as amount from bank_system_bill
        <where>
            operation_type = 'IN'
            <if test="startTime !=null" >
                and created_time >= #{startTime}
            </if>
            <if test="endTime !=null ">
                and created_time &lt;= #{endTime}
            </if>
            <if test="operationType !=null">
                and operation_type = #{operationType}
            </if>
            <if test="businessType !=null">
                and business_type = #{businessType}
            </if>
        </where>
    </select>
</mapper>