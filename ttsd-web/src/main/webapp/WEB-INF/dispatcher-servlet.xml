<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:property-placeholder location="classpath*:ttsd-env.properties, classpath*:ttsd-biz.properties"/>

    <mvc:annotation-driven>
        <mvc:message-converters register-defaults="false">
            <bean id="jacksonMessageConverter"
                  class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper">
                    <bean class="com.tuotiansudai.web.configuration.CustomerObjectMapper"/>
                </property>
                <property name="supportedMediaTypes">
                    <list>
                        <bean class="org.springframework.http.MediaType">
                            <constructor-arg index="0" value="application"/>
                            <constructor-arg index="1" value="json"/>
                            <constructor-arg index="2" value="UTF-8"/>
                        </bean>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
        <mvc:path-matching suffix-pattern="false"/>
    </mvc:annotation-driven>

    <mvc:interceptors>
        <bean class="com.tuotiansudai.web.interceptors.LogGenerateInterceptor"/>
        <bean class="com.tuotiansudai.web.interceptors.ChannelInterceptor"/>
        <bean class="com.tuotiansudai.web.interceptors.LinkExchangeInterceptor"/>
    </mvc:interceptors>

    <context:component-scan base-package="com.tuotiansudai.web"/>

    <mvc:resources mapping="/html/**" location="/html/"/>
    <mvc:resources mapping="/style/**" location="/style/"/>
    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/js/**" location="/js/"/>
    <mvc:resources mapping="/pdf/**" location="/pdf/"/>
    <mvc:resources mapping="/tpl/**" location="/tpl/"/>
    <mvc:resources mapping="/upload/**" location="/upload/"/>
    <mvc:resources mapping="/robots.txt" location="/robots.txt"/>
    <mvc:resources mapping="/favicon.ico" location="/favicon.ico"/>

    <bean id="staticResourceVersionMap" class="com.tuotiansudai.web.configuration.FreeMarkerVariablesMap">
        <property name="singleton" value="true"/>
        <property name="staticServer" value="${web.static.server}"/>
        <property name="javascriptLocation" value="${web.js.path}"/>
        <property name="cssLocation" value="${web.css.path}"/>
        <property name="sourceMap">
            <map>
                <entry key="percentFraction">
                    <bean class="com.tuotiansudai.web.freemarker.directive.PercentFractionDirective"/>
                </entry>
                <entry key="percentInteger">
                    <bean class="com.tuotiansudai.web.freemarker.directive.PercentIntegerDirective"/>
                </entry>
                <entry key="amount">
                    <bean class="com.tuotiansudai.web.freemarker.directive.AmountDirective"/>
                </entry>
                <entry key="unreadMessageCount">
                    <bean class="com.tuotiansudai.web.freemarker.directive.UnreadMessageCountDirective"/>
                </entry>
            </map>
        </property>
    </bean>

    <!-- freemarker config -->
    <bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/templates"/>
        <property name="defaultEncoding" value="utf-8"/>
        <property name="freemarkerVariables" ref="staticResourceVersionMap"/>
        <property name="freemarkerSettings">
            <props>
                <prop key="template_exception_handler">rethrow</prop>
            </props>
        </property>
    </bean>

    <!--
    View resolvers can also be configured with ResourceBundles or XML files. If you need
    different view resolving based on Locale, you have to use the resource bundle resolver.
    -->
    <bean id="freeMarkerViewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="cache" value="true"/>
        <property name="prefix" value=""/>
        <property name="suffix" value=".ftl"/>
        <property name="contentType" value="text/html;charset=UTF-8"/>
        <property name="requestContextAttribute" value="requestContext"/>
        <property name="exposeSessionAttributes" value="true"/>
    </bean>
</beans>